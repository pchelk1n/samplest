{
    "name": "bdv/samplest",
    "description": "Learning how to build a PHP framework",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "symfony/var-dumper": "^7.4",
        "friendsofphp/php-cs-fixer": "^3.94"
    },
    "autoload": {
        "psr-4": {
            "Samplest\\": "src/",
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    }
}
